	float: left;
	width: auto !important;
	margin: 0.375em 1.75em 1.75em 0;
}

.alignright {
	float: right;
	width: auto !important;
	margin: 0.375em 0 1.75em 1.75em;
}

.aligncenter {
	clear: both;
	display: block;
	width: auto !important;
	margin: 0 auto 1.75em;
}

